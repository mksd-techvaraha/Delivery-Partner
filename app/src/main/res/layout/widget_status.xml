<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/fifteen"
    android:layout_marginLeft="@dimen/fifteen"
    android:layout_marginTop="@dimen/fifteen"
    android:layout_marginEnd="@dimen/fifteen"
    android:layout_marginRight="@dimen/fifteen">

    <TextView
        android:id="@+id/xTvStatusMsg"
        style="@style/textViewBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hey Rahul update your status" />

    <TextView
        android:id="@+id/xTvStatusQuestion"
        style="@style/textViewColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/xTvStatusMsg"
        tools:text="Did you complete the Delivery ?" />

    <Button
        android:id="@+id/xBtnPositive"
        style="@style/buttonStyleEnable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/yes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/xTvStatusQuestion" />

    <Button
        android:id="@+id/xBtnNegative"
        style="@style/buttonLineStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:text="@string/no"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/xBtnPositive"
        app:layout_constraintTop_toTopOf="@id/xBtnPositive" />

</androidx.constraintlayout.widget.ConstraintLayout>